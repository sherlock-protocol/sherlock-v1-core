{
  "name": "hardhat-project",
  "scripts": {
    "prettier": "prettier --write contracts/*.sol contracts/**/*.sol",
    "prettier-diff": "prettier --list-different  contracts/*.sol contracts/**/*.sol",
    "forktest": "npx hardhat node & P1=$! sleep 3 && npx hardhat --network localhost run scripts/frontend.js & wait $P1"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 100,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "semi": true
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.1"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@openzeppelin/contracts": "^3.2.1-solc-0.7",
    "diamond-2": "git://github.com/mudgen/diamond-2",
    "dotenv": "^8.2.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10"
  }
}
